# Copy this file to .env and fill in your actual values

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://user:password@localhost:5432/forge

# Session Configuration (REQUIRED for persistent login)
SESSION_SECRET=your-secure-random-secret-key-here

# Tauri Desktop App Mode (REQUIRED for Tauri builds)
# Set to "true" when building for Tauri desktop app
# This disables secure cookies since Tauri runs over local HTTP
TAURI_APP=true

# API Keys (Optional - enables advanced features)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
